{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --inspect=0.0.0.0:9229 --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts src",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node-dev --transpile-only src/scripts/migrate.ts",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts",
    "build:docs": "node dist/scripts/generate-openapi.js",
    "postbuild": "node dist/scripts/generate-openapi.js || true"
  },
  "dependencies": {
    "@nestjs/config": "^3.1.0",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "swagger-ui-express": "^5.0.0",
    "mongoose": "^8.3.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
